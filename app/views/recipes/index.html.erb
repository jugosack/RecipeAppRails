<div class="recips-show">
  <h3 class="recipes-all">All Recipes</h3>
  <div class="d-flex justify-content-end m-3">
    <button class="btn btn-outline-primary">
      <%= link_to 'Add new recipe', new_recipe_path, class: "text-decoration-none" %>
    </button>
  </div>

  <div class="recipescol">
    <% @recipes.each do |recipe| %>
      <%= link_to recipe_path(recipe.id), class: "recipe_link" do %>
        <div class="each-recipe">
          <div class="recipe-header">
            <h3><%= recipe.name %></h3>
            
            <% if can? :destroy, recipe %>
              <%= button_to "Remove", recipe_path(recipe.id), method: :delete, class: "btn btn-danger recipe-delete" %>
            <% end %>
          </div>
          
          <div class="description_rec">
            <p><%= recipe.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>