<div class="recips-show">
  <h3 class="recipes-all">All Recipes</h3>
  <div class="d-flex justify-content-end m-3">
    <button class='new-but-food'>
      <%= link_to 'Add new recipe', new_recipe_path, class: "recipe-new-btn-t" %>
    </button> 
  </div>

  
  <div class="recipescol">
    <% @recipes.each do |recipe| %>
      <%= link_to recipe_path(recipe.id), class: "recipe_link" do %>
      <div class="each-recipe">
      <div class="">
        <h3><%= recipe.name %></h3>

        
        <% if can? :destroy, recipe %>
        <%= button_to "Remove", recipe_path(recipe.id ), :method => :delete, class: "recipe-delete" %> 
        <% end %>
 

      </div>
      <div class="description_rec">
        <p><%= recipe.description %></p>
      </div>
      </div>
      <% end %>
  <% end %>
  </div>

</div>
