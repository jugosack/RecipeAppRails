        <p class="navbar-text"> or </p>
        <p class="navbar-text"><%= link_to 'Sign in', new_user_session_path, class: "btn btn-primary btn-sm sign-out-btn" %></p>
      <% end %>
      </div>
    </div>

    
  </nav>
